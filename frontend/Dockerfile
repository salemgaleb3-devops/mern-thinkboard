# Build stage
FROM node:20-alpine AS build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . . .
RUN npm run build

# Production stage with Nginx
FROM nginx:alpine

COPY --from=build /app/dist /usr/share/nginx/html
# For Create React App use: /app/build

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]

